{% extends "base.njk" %}
{% block content %}
  <div class="max-w-sm lg:max-w-4xl mx-auto mt-8">
    <h1>News</h1>
    {%- for item in collections.news | reverse -%}
      <a class="no-underline hover:underline decoration-primary" href="{{ item.url }}">
        <h3>{{ item.data.title }}</h3>
      </a>
      <p>
        Published {{ item.date.toLocaleDateString('en-us', { timeZone: 'UTC' }) }}
      </p>
      <img src="{{ item.data.image }}"/>
      <div class="mt-3 w-100 overflow-hidden break-words max-h-12 bg-gradient-to-b">{{ item.templateContent | safe }}</div>
      <a href="{{ item.url }}">Read more</a>
      <hr/>
    {%- endfor -%}
  </div>
{% endblock %}